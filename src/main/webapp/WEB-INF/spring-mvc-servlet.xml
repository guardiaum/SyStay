<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
   http://www.springframework.org/schema/beans     
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context 
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath:systay/config/user-beans.xml" />
        <import resource="classpath:systay/config/database.xml"/>
        
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>
        
        <bean id="ds" class="org.springframework.jdbc.datasource.DriverManagerDataSource">  
            <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"></property>  
            <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"></property>  
            <property name="username" value="system"></property>  
            <property name="password" value="oracledb"></property>  
        </bean>  
  
        <bean id="jt" class="org.springframework.jdbc.core.JdbcTemplate">  
            <property name="dataSource" ref="ds"></property>  
        </bean>  
        
        <bean id="hospedeService" class="com.dbproject.systay.services.impl.HospedeServiceImpl" />
        
        <bean id="hospedeDao" class="com.dbproject.systay.dao.impl.HospedeDaoImpl">
            <property name="template" ref="jt"></property>  
        </bean> 
        
        
        <bean id="funcionarioService" class="com.dbproject.systay.services.impl.FuncionarioServiceImpl" /> 
</beans>